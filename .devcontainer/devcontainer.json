    "vscode": {
      "extensions": [
  "GitHub.copilot",
  "GitHub.copilot-chat",
  "GitHub.copilot-labs",
  "ms-dotnettools.csharp",
  "ms-dotnettools.vscode-dotnet-runtime",
  "formulahendry.dotnet-test-explorer",
  "k--kato.docomment",
  "vsls-contrib.codetour",
  "Phu1237.vs-browser"
      ]
    }
  }
}